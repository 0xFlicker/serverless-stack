{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["core/*"],
      "@cli/*": ["cli/*"]
    }
  },
  "include": ["src", "support"],
  "exclude": []
}
